// reversing string using "StringBuilder"

import java.util.Scanner;
public class Main
{
    public static void main(String[]args)
    {
        Scanner sc = new Scanner(System.in);
        
        System.out.print("\nEnter the original String : ");
        String originalString = sc.nextLine();
        StringBuilder reversedString = new StringBuilder(originalString);
        reversedString.reverse();
        System.out.print("\nReverse of the string is : " + reversedString.toString());
    }
}
